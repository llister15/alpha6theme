<!-- /snippets/social-sharing.liquid -->
<div class="social-link">
  <p>SHARE</p>
<ul>
  {% if settings.share_facebook %}
    <li><a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
		<i class="fa fa-facebook single"></i></a></li>  
  {% endif %}

  {% if settings.share_twitter %}
    <li><a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      	<i class="fa fa-twitter single"></i>
      </a></li>
  {% endif %}

  {% if settings.share_pinterest %}
    <li><a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      <i class="fa fa-pinterest-p single"></i>
      </a></li>
  {% endif %}
</ul>
</div>
